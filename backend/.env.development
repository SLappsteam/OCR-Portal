# Development Environment Configuration
# This file is a template — copy to .env or set ENVIRONMENT=development

# Database
DATABASE_URL="postgresql://postgres:slumberland@localhost:5432/ocr_portal?schema=public"

# Server
NODE_ENV=development
PORT=3000

# Logging
LOG_LEVEL=debug

# OCR (lower workers for dev machine)
OCR_WORKERS=4
MAX_CONCURRENT_BATCHES=2

# File Watcher
WATCH_FOLDER_PATH=./watch
TIFF_STORAGE_PATH=./storage/tiffs
ARCHIVE_FOLDER_PATH=./storage/archive

# Authentication
JWT_SECRET=<generate-with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))">
JWT_REFRESH_SECRET=<generate-with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))">
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# OIDC / Entra ID (optional — configure in app_settings table or here)
# ENTRA_CLIENT_SECRET=
