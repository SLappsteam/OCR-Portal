# Production Environment Configuration
# This file is a template — copy to .env or set ENVIRONMENT=production

# Database — PRODUCTION DATABASE
DATABASE_URL="postgresql://ocr_user:<PROD_DB_PASSWORD>@<PROD_DB_HOST>:5432/ocr_portal?schema=public"

# Server
NODE_ENV=production
PORT=3000

# Logging
LOG_LEVEL=warn

# OCR (tune to prod server CPU capacity)
OCR_WORKERS=8
MAX_CONCURRENT_BATCHES=6

# File Watcher
WATCH_FOLDER_PATH=./watch
TIFF_STORAGE_PATH=./storage/tiffs
ARCHIVE_FOLDER_PATH=./storage/archive

# Authentication — GENERATE UNIQUE SECRETS FOR PROD
JWT_SECRET=<generate-with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))">
JWT_REFRESH_SECRET=<generate-with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))">
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Frontend URL (for CORS) — UPDATE WITH PROD HOSTNAME
FRONTEND_URL=https://<PROD_HOSTNAME>

# OIDC / Entra ID (update redirect URI in Azure Portal for prod)
# ENTRA_CLIENT_SECRET=<from-azure-portal>
