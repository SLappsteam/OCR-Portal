{
  "name": "ocr-portal-backend",
  "version": "1.0.0",
  "description": "Slumberland Document Processing System - Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "dev:restart": "ts-node scripts/restart.ts && npm run dev",
    "stop": "ts-node scripts/restart.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:qa": "npx pm2 start ecosystem.config.js --env qa",
    "start:prod": "npx pm2 start ecosystem.config.js --env production",
    "pm2:stop": "npx pm2 stop ocr-portal-backend",
    "pm2:restart": "npx pm2 restart ocr-portal-backend",
    "pm2:status": "npx pm2 status",
    "pm2:logs": "npx pm2 logs ocr-portal-backend --lines 50",
    "pm2:monit": "npx pm2 monit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:seed": "prisma db seed"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "@undecaf/zbar-wasm": "^0.11.0",
    "@zxing/library": "^0.21.0",
    "bcryptjs": "^3.0.3",
    "bwip-js": "^4.8.0",
    "chokidar": "^5.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-rate-limit": "^8.2.1",
    "file-type": "^16.5.4",
    "helmet": "^7.1.0",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.3",
    "pm2": "^6.0.14",
    "sharp": "^0.33.2",
    "tesseract.js": "^7.0.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.11",
    "prisma": "^5.10.0",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
