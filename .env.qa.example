# QA Environment Configuration
# Copy to backend/.env and update values

# Database - USE SEPARATE QA DATABASE
DATABASE_URL=postgresql://ocr_user:ocr_password@<QA_DB_HOST>:5432/ocr_portal_qa

# Server
NODE_ENV=production
PORT=3000

# URLs - UPDATE WITH QA SERVER IP
FRONTEND_URL=http://<QA_IP>:5173
VITE_API_URL=http://<QA_IP>:3000

# JWT Secrets - GENERATE NEW ONES FOR QA
JWT_SECRET=<generate-with-openssl-rand-base64-32>
JWT_REFRESH_SECRET=<generate-with-openssl-rand-base64-32>

# Logging
LOG_LEVEL=info

# File Storage
WATCH_FOLDER_PATH=./watch
TIFF_STORAGE_PATH=./storage/tiffs
ARCHIVE_FOLDER_PATH=./storage/archive

# OCR Workers (adjust based on server CPU)
OCR_WORKERS=4

# OIDC (if using SSO - update redirect URI in Azure Portal too)
# ENTRA_CLIENT_SECRET=<from-azure-portal>
